generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 1:1 ---
model User {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  //el signo quiere decir que su valor puede ser nulo o opcional
  profile Profile?
  posts   Post[]   // RelaciÃ³n 1:N con Post
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String
  user   User   @relation(fields: [userId], references: [id])
  userId Int    @unique
}

// --- 1:N ---
model Post {
  id       Int       @id @default(autoincrement())
  title    String
  user     User      @relation(fields: [userId], references: [id])
  userId   Int
  postTags PostTag[] // RelaciÃ³n con tabla intermedia
}

// --- N:M ---
model Tag {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  postTags PostTag[] // RelaciÃ³n con tabla intermedia
}

// La tabla PostTag es una tabla intermedia (tambiÃ©n llamada "join table" o "tabla de uniÃ³n")
// que implementa la relaciÃ³n Many-to-Many (N:M) entre Posts y Tags.
model PostTag {
  postId Int
  tagId  Int
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  //on cascade: Si se borra un post, se borran sus relaciones en PostTag
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}

